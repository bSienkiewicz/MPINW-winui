<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="SupportTool.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SupportTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tableView="using:WinUI.TableView"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="12">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="App Settings" />

            <!--  Repository location  -->
            <Grid
                x:Name="RepoDirectorySettingItem"
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <FontIcon
                        Margin="16,0,16,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Glyph="&#xE8B7;" />

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontSize="14" Text="Repository Location" />
                        <TextBlock
                            x:Name="RepoPathTextBlock"
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Select the main Alerting repository folder" />
                    </StackPanel>
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Click="SelectFolderButton_Click"
                    Content="Select Repository" />
            </Grid>

            <!--  API Input  -->
            <Expander
                x:Name="ExpanderSettings_NRAPI"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <Grid Padding="16">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Glyph="&#xF081;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="14" Text="New Relic Connection" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Set up New Relic API Key" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Expander.Header>
                <Expander.Content>
                    <StackPanel Padding="16" HorizontalAlignment="Stretch">
                        <TextBox
                            Name="NR_API_KeyTextbox"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="New Relic API Key:"
                            PlaceholderText="NRAK-1234567890"
                            TextChanged="NR_API_Key_OnTextChanged" />
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <!--  Reset settings  -->
            <Expander
                x:Name="ExpanderSettings_RemoveAll"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <Grid Padding="16">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Glyph="&#xED62;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="14" Text="Clear application settings" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Restore the app to the default settings" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Expander.Header>
                <Expander.Content>
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Confirm clearing app settings" />
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Content="Clear settings">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,12"
                                            Style="{ThemeResource BaseTextBlockStyle}"
                                            Text="All settings will be removed. Do you want to continue?" />
                                        <Button Click="DeleteConfirmation_Click" Content="Yes, clear the settings" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </Expander.Content>
            </Expander>
        </StackPanel>
        <Canvas
            x:Name="ToastContainer"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsHitTestVisible="True" />
    </Grid>
</Page>