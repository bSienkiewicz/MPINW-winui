<?xml version="1.0" encoding="utf-8" ?>

<Page
    x:Class="SupportTool.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SupportTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tableView="using:WinUI.TableView"
    mc:Ignorable="d">


    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock
                Grid.Column="0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="App Settings" />
            <Expander
                x:Name="ExpanderSettings_NRAPI"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Margin="16" Glyph="&#xF081;" />
                        <StackPanel Padding="16">
                            <TextBlock
                                Margin="0,0,0,6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="New Relic Connection" />
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="Set up New Relic API Key" />
                        </StackPanel>
                    </StackPanel>
                </Expander.Header>
                <Expander.Content>
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBox
                            Name="NR_API_KeyTextbox"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="New Relic API Key:"
                            PlaceholderText="NRAK-1234567890"
                            TextChanged="NR_API_Key_OnTextChanged" />
                    </StackPanel>
                </Expander.Content>
            </Expander>
            <Expander
                x:Name="ExpanderSettings_RemoveAll"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Margin="16" Glyph="&#xED62;" />
                        <StackPanel Padding="16">
                            <TextBlock
                                Margin="0,0,0,6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Clear application settings" />
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="Restore the app to the default settings" />
                        </StackPanel>
                    </StackPanel>
                </Expander.Header>
                <Expander.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            Text="Confirm clearing app settings" />
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Content="Clear settings">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,12"
                                            Style="{ThemeResource BaseTextBlockStyle}"
                                            Text="All settings will be removed. Do you want to continue?" />
                                        <Button Click="DeleteConfirmation_Click" Content="Yes, clear the settings" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </Expander.Content>
            </Expander>
        </StackPanel>
    </Grid>
</Page>