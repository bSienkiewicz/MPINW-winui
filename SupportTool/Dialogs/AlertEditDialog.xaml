<?xml version="1.0" encoding="utf-8" ?>
<!--  Dialogs/AlertEditDialog.xaml  -->
<ContentDialog
    x:Class="SupportTool.Dialogs.AlertEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Alert"
    DefaultButton="Primary"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <StackPanel Spacing="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Client Name:" />
            <TextBlock
                x:Name="AppNameText"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Carrier Name:" />
            <TextBlock
                x:Name="CarrierNameText"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="PD Alert:" />
            <CheckBox
                x:Name="PDAlertCheck"
                Grid.Row="2"
                Grid.Column="1" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="ER Alert:" />
            <CheckBox
                x:Name="ERAlertCheck"
                Grid.Row="3"
                Grid.Column="1" />
        </Grid>

        <TextBox
            x:Name="NotesText"
            Height="100"
            AcceptsReturn="True"
            Header="Notes"
            TextWrapping="Wrap" />
    </StackPanel>
</ContentDialog>