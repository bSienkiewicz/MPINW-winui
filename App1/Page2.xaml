<Page
    x:Class="App1.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="LocationServicesTemplate" x:DataType="local:LS">
            <ItemContainer HorizontalAlignment="Stretch" AutomationProperties.Name="{x:Bind Title}">
                <Expander
                    x:Name="Expander3"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch">
                    <Expander.Header>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind Title}" />
                    </Expander.Header>
                    <Expander.Content>
                        <Grid>
                            <TextBlock Text="{x:Bind Description}" />
                        </Grid>
                    </Expander.Content>
                </Expander>
            </ItemContainer>
        </DataTemplate>

        <UniformGridLayout
            x:Key="UniformGridLayout"
            MinColumnSpacing="12"
            MinItemHeight="108"
            MinItemWidth="108"
            MinRowSpacing="12" />

    </Page.Resources>

    <Grid Padding="20" RowSpacing="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--  Connection details expander  -->
        <Expander
            x:Name="ExpanderConnection"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch">
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <FontIcon Margin="16" Glyph="&#xF081;" />
                    <StackPanel Padding="16">
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Connection details" />
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Connection details" />
                    </StackPanel>
                </StackPanel>
            </Expander.Header>
            <Expander.Content>
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBox
                        Name="Hostname"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Header="LS Endpoint:"
                        Text="siemano"
                        TextChanged="TextBox_TextChanged" />
                    <TextBox
                        Name="Username"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Header="Username:"
                        Text="siemano"
                        TextChanged="TextBox_TextChanged" />
                    <TextBox
                        Name="Password"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Header="Password:"
                        Text="siemano"
                        TextChanged="TextBox_TextChanged" />
                </StackPanel>
            </Expander.Content>
        </Expander>



        <!--  TextBox row  -->
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                Name="ProviderID"
                Grid.Column="0"
                Header="Location provider ID:"
                PlaceholderText="30279f10-c43e-4300-8427-5ea5bea53f90"
                Text="13" />
            <TextBox
                Grid.Column="1"
                Header="Country:"
                PlaceholderText="Name" />
            <TextBox
                Grid.Column="2"
                Header="Delivery Point ID:"
                PlaceholderText="Name" />

            <!--  Search button  -->
            <Button
                Name="AcceptButton"
                Grid.Column="3"
                Click="OnFetchDataClicked"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel>
                    <FontIcon Glyph="&#xE721;" />
                    <TextBlock Text="Search" />
                </StackPanel>
            </Button>
        </Grid>

        <ProgressBar
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            IsIndeterminate="True"
            ShowError="False"
            ShowPaused="False"
            Visibility="{Binding IsFetchingData}" />

        <ScrollViewer Grid.Row="3">
            <StackPanel Spacing="0">
                <ItemsView ItemTemplate="{StaticResource LocationServicesTemplate}" ItemsSource="{x:Bind LocationServices}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
